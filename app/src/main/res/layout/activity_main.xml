<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img1"
    android:gravity="center">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="3dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/card_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:fontFamily="serif-monospace"
                android:text="This a question"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/optuion_a"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/card_question"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_pressed"
                android:onClick="check_answer"
                android:tag="0"
                android:text="Option A" />

            <Button
                android:id="@+id/optuion_b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/optuion_a"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_pressed"
                android:onClick="check_answer"
                android:tag="1"
                android:text="Option B" />

            <Button
                android:id="@+id/optuion_c"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/optuion_b"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_pressed"
                android:onClick="check_answer"
                android:tag="2"
                android:text="Option C" />

            <Button
                android:id="@+id/optuion_d"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/optuion_c"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_pressed"
                android:onClick="check_answer"
                android:tag="3"
                android:text="Option D" />

            <TextView
                android:id="@+id/next_que"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/optuion_d"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:width="100dp"
                android:background="@drawable/button_bg"
                android:clickable="true"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:onClick="next_question"
                android:text="SKIP"
                android:textColor="#fff"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>
